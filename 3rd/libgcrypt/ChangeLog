	(FUNC_CTR_ENC, FUNC_CTR32LE_ENC, FUNC_CFB_DEC, FUNC_CBC_DEC)
	(aes_simd128_ocb_enc, aes_simd128_ocb_dec, FUNC_OCB_AUTH)
	(aes_simd128_ecb_enc, aes_simd128_ecb_dec, aes_simd128_xts_enc)
